          "email",
          "newUsername",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          },
          "newUsername": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
