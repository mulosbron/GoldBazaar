<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tema Paleti SeÃ§in"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="?attr/colorOnPrimary"
            android:paddingBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbPalette1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palette 1 (Turkuaz)" />

            <RadioButton
                android:id="@+id/rbPalette4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palette 4 (Gece Mavisi)" />

            <RadioButton
                android:id="@+id/rbPalette5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Palette 5 (Mor)" />

        </RadioGroup>
    </LinearLayout>
</ScrollView>
