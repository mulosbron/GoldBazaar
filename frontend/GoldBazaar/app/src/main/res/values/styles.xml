<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.GoldBazaar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar and navigation bar colors -->
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/background</item>
        <!--item name="android:windowLightNavigationBar">true</item-->

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Text appearance -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.GoldBazaar.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.GoldBazaar.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.GoldBazaar.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.GoldBazaar.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.GoldBazaar.Caption</item>

        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.GoldBazaar.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.GoldBazaar.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.GoldBazaar.LargeComponent</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.GoldBazaar.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.GoldBazaar.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.GoldBazaar.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.GoldBazaar.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.GoldBazaar.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Bottom Navigation Text Style -->

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.GoldBazaar.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.GoldBazaar.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.GoldBazaar.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Custom Widget Styles -->

    <!-- Circle Image View -->

</resources>